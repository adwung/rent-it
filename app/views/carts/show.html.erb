<section id="cart">
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <h1>My selected tools</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% if cart.any? %>
      <table class="table table-striped">
        <thead>
          <th>Image</th>
          <th>Name</th>
          <th>Owner</th>
          <th> </th>
        </thead>
        <tbody>
          <% @tools.each do |tool| %>
            <tr>
              <td><%= image_tag tool.picture.tiny %></td>
              <td><%= link_to tool.name, tool %></td>
              <td><%= tool.owner.name %></td>
              <td align="right"><%= link_to 'Delete', delete_item_cart_path(tool_id: tool.id), method: :delete, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
          <tr>
            <td colspan="4" align="right"><strong>Total:</strong><%= format_price @total %></td>
          </tr>
        </tbody>
        <tr>
          <td colspan="3"></td>
          <td>
            <div class="row pull-right">
              <div class="col-xs-12 ">
                <%= form_tag rentals_path do %>
                <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-amount="<%= @total_deposit %>"
                    data-name="Rent-it"
                    data-description="Rent-it Rental Order"
                    data-locale="auto"
                    data-email= "<%= current_user.email %>"
                    data-currency="cad">
                  </script>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      </table>
      <% else%>
        <p>No item found on cart :(</p>
        <%= link_to '<- Back to main page', root_path %>
      <% end %>
    </div>
  </div>
</section>